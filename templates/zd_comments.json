{
    "template": "zd_comments",
    "settings": {
    	"number_of_shards": 1,
    	"number_of_replicas": 0,
    	"index.mapping.coerce":true
    },
    "mappings": {
        "comment": {
			"dynamic_templates": [
               {
                  "string_fields": {
                     "mapping": {
                        "index": "analyzed",
                        "omit_norms": true,
                        "type": "string",
                        "fields": {
                           "raw": {
                              "index": "not_analyzed",
                              "ignore_above": 256,
                              "type": "string"
                           }
                        }
                     },
                     "match": "*",
                     "match_mapping_type": "string"
                  }
               }
            ],
            "properties": {
        "created_at":{
          "type": "date",
          "format": "yyyy-MM-dd HH:mm:ss z||dateOptionalTime"
        },
        "updated_at":{
          "type": "date",
          "format": "yyyy-MM-dd HH:mm:ss z||dateOptionalTime"
        },        
                "geocode":{
            		"type":"geo_point"
            	}
            }
        }
    }
}
