{
    "template": "zd_ticket",
    "settings": {
    	"number_of_shards": 1,
    	"number_of_replicas": 0,
    	"index.mapping.coerce":true
    },
    "mappings": {
        "ticket": {
			"dynamic_templates": [
               {
                  "string_fields": {
                     "mapping": {
                        "index": "analyzed",
                        "omit_norms": true,
                        "type": "string",
                        "fields": {
                           "raw": {
                              "index": "not_analyzed",
                              "ignore_above": 256,
                              "type": "string",
                              "doc_values": true
                           }
                        }
                     },
                     "match": "*",
		             "unmatch": "comments",
                     "match_mapping_type": "string"
                  }
               },
               {
               "other_fields": {
                 "mapping": {
                 "doc_values": true
                 },
                 "match_mapping_type": "*",
                 "match": "*",
                 "unmatch": "comments"
               }
               }
            ],
            "properties": {
        "created_at":{
          "type": "date",
          "format": "yyyy-MM-dd HH:mm:ss z||dateOptionalTime||yyyy-MM-dd HH:mm:ss Z"
        },
        "updated_at":{
          "type": "date",
          "format": "yyyy-MM-dd HH:mm:ss z||dateOptionalTime||yyyy-MM-dd HH:mm:ss Z"
        },
                "first_reply_time_in_minutes": {
                    "type": "integer",
                    "term_statistics": true
                },
                "full_resolution_time_in_minutes_within_business_hours": {
                    "type": "integer",
                    "term_statistics": true
                },
                "first_resolution_time_in_minutes_within_business_hours": {
                    "type": "integer",
                    "term_statistics": true
                },
                "agent_wait_time_in_minutes_within_business_hours": {
                    "type": "integer",
                    "term_statistics": true
                },
                "on_hold_time_in_minutes_within_business_hours": {
                    "type": "integer",
                    "term_statistics": true
                },
                "full_resolution_time_in_minutes": {
                    "type": "integer",
                    "term_statistics": true
                },
                "first_resolution_time_in_minutes": {
                    "type": "integer",
                    "term_statistics": true
                },
                "agent_wait_time_in_minutes": {
                    "type": "integer",
                    "term_statistics": true
                },
                "requester_wait_time_in_minutes_within_business_hours": {
                    "type": "integer",
                    "term_statistics": true
                },
                "initially_assigned_at": {
                    "type": "date"
                },
                "first_reply_time_in_minutes_within_business_hours": {
                    "type": "integer",
                    "term_statistics": true
                },
                "on_hold_time_in_minutes": {
                    "type": "integer",
                    "term_statistics": true
                },
                "requester_wait_time_in_minutes": {
                    "type": "integer",
                    "term_statistics": true
                },
                "resolution_time": {
                    "type": "integer",
                    "term_statistics": true
                }                         
            }
        }
    }
}
